<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/background" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="right" >

        <LinearLayout
            android:id="@+id/left"
            android:layout_width="90dip"
            android:layout_height="300dip"
            android:layout_gravity="center"
            android:background="@mipmap/turnplate_bg_left"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="100dip"
                android:text="领悟数学游戏的奥妙，体验其乐趣，挖掘你大脑的潜力！" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right"
            android:layout_width="230dip"
            android:layout_height="300dip"
            android:layout_gravity="center"
            android:background="@mipmap/turnplate_bg_right"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="300dip"
                android:layout_height="300dip" >

                <com.ui.CircleLayout
                    android:id="@+id/main_circle_layout"
                    android:layout_width="300dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    circle:firstChildPosition="South"
                    circle:isRotating="true"
                    circle:rotateToCenter="false" >

                    <!-- circle:circleBackground="@drawable/green"  > -->

                    <com.ui.CircleImageView
                        android:id="@+id/laybtn1"
                        circle:name="加法"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="50dip"
                            android:layout_height="50dip"
                            android:layout_gravity="center"
                            android:src="@mipmap/home_mbank_3_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="加法"
                            android:textSize="14dip" />
                    </com.ui.CircleImageView>

                    <com.ui.CircleImageView
                        android:id="@+id/laybtn2"
                        circle:name="乘法"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="50dip"
                            android:layout_height="50dip"
                            android:layout_gravity="center"
                            android:src="@mipmap/home_mbank_2_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="乘法"
                            android:textSize="14dip" />
                    </com.ui.CircleImageView>

                    <com.ui.CircleImageView
                        android:id="@+id/laybtn3"
                        circle:name="厘米和米"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="50dip"
                            android:layout_height="50dip"
                            android:layout_gravity="center"
                            android:src="@mipmap/home_mbank_3_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="厘米和米"
                            android:textSize="14dip" />
                    </com.ui.CircleImageView>

                    <com.ui.CircleImageView
                        android:id="@+id/laybtn4"
                        circle:name="不等式"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="50dip"
                            android:layout_height="50dip"
                            android:layout_gravity="center"
                            android:src="@mipmap/home_mbank_2_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="不等式"
                            android:textSize="14dip" />
                    </com.ui.CircleImageView>

                    <com.ui.CircleImageView
                        android:id="@+id/laybtn5"
                        circle:name="分解数字"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/img5"
                            android:layout_width="50dip"
                            android:layout_height="50dip"
                            android:layout_gravity="center"
                            android:src="@mipmap/home_mbank_3_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="分解数字"
                            android:textSize="14dip" />
                    </com.ui.CircleImageView>

                    <com.ui.CircleImageView
                        android:id="@+id/laybtn6"
                        circle:name="竖式填词"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/img6"
                            android:layout_width="50dip"
                            android:layout_height="50dip"
                            android:layout_gravity="center"
                            android:src="@mipmap/home_mbank_5_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="竖式填词"
                            android:textSize="14dip" />
                    </com.ui.CircleImageView>
                    
                    <com.ui.CircleImageView
                        android:id="@+id/laybtn7"
                        circle:name="数数几个角"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/img7"
                            android:layout_width="50dip"
                            android:layout_height="50dip"
                            android:layout_gravity="center"
                            android:src="@mipmap/home_mbank_3_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="数数几个角"
                            android:textSize="14dip" />
                    </com.ui.CircleImageView>
                    
                    <com.ui.CircleImageView
                        android:id="@+id/laybtn8"
                        circle:name="表内乘除法"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/img8"
                            android:layout_width="50dip"
                            android:layout_height="50dip"
                            android:layout_gravity="center"
                            android:src="@mipmap/home_mbank_5_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="表内乘除法"
                            android:textSize="14dip" />
                    </com.ui.CircleImageView>
                </com.ui.CircleLayout>

                <RelativeLayout
                    android:id="@+id/relbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                    <ImageView
                        android:id="@+id/imageView_center"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_centerInParent="true"
                        android:scaleType="center"
                        android:background="@mipmap/center" />

                    <ImageView
                        android:layout_width="116dp"
                        android:layout_height="116dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/turnplate_mask_unlogin" />
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="0.5">
            <ImageView
                android:id="@+id/imageView_setting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/setting"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="#ffffff"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="0.5">
            <ImageView
                android:id="@+id/imageView_us"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/us"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我们"
                android:textColor="#ffffff"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>